# DocsBuddy Environment Configuration Template
# Copy this file to .env.local and fill in your actual values

# =============================================================================
# MAIN CHAT FEATURES
# =============================================================================

# OpenAI API Key for main chatbot functionality
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# OpenAI Model Configuration
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7

# =============================================================================
# LOOKUP FEATURES
# =============================================================================

# Lookup features use the same OpenAI API key as main chat
# No separate key needed - uses OPENAI_API_KEY above

# Lookup Configuration
LOOKUP_ENABLE_AUTO_LOOKUP=true
LOOKUP_ENABLE_CODE_ANALYSIS=true
LOOKUP_ENABLE_DOCUMENTATION_LOOKUP=true
LOOKUP_ENABLE_TOOLS_LOOKUP=true
LOOKUP_AUTO_SHOW_INSIGHTS=true
LOOKUP_MAX_INSIGHTS_DISPLAY=5

# Lookup API Settings
LOOKUP_MAX_LOOKUP_DELAY_MS=2000
LOOKUP_MIN_RESPONSE_LENGTH_FOR_LOOKUP=100

# =============================================================================
# VISUALIZATION FEATURES
# =============================================================================

# Visualization features use the same OpenAI API key as main chat
# No separate key needed - uses OPENAI_API_KEY above

# Diagram Generation Settings
VISUALIZATION_ENABLE_DIAGRAMS=true
VISUALIZATION_DEFAULT_DIAGRAM_TYPE=git
VISUALIZATION_MAX_DIAGRAM_SIZE=600px
VISUALIZATION_DIAGRAM_HEIGHT=350px

# Supported Diagram Types
VISUALIZATION_ENABLE_GIT_DIAGRAMS=true
VISUALIZATION_ENABLE_ARCHITECTURE_DIAGRAMS=true
VISUALIZATION_ENABLE_FLOWCHART_DIAGRAMS=true
VISUALIZATION_ENABLE_ERD_DIAGRAMS=true

# Diagram Auto-Detection
VISUALIZATION_AUTO_DETECT_DIAGRAM_TYPE=true
VISUALIZATION_SHOW_DIAGRAM_FOR_README=true
VISUALIZATION_SHOW_DIAGRAM_FOR_DOCUMENTATION=true

# =============================================================================
# GENERAL APPLICATION SETTINGS
# =============================================================================

# Application Environment
NODE_ENV=development

# API Configuration
API_TIMEOUT=30000
API_RETRY_ATTEMPTS=3

# UI Configuration
UI_ANIMATION_DURATION=300
UI_MAX_MESSAGE_LENGTH=4000
UI_ENABLE_DARK_MODE=true

# Storage Configuration
STORAGE_ENABLE_LOOKUP_HISTORY=true
STORAGE_MAX_STORED_LOOKUPS=100
STORAGE_ENABLE_CONVERSATION_HISTORY=true
STORAGE_MAX_CONVERSATION_HISTORY=50

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Debug Configuration
DEBUG_MODE=true
DEBUG_LOG_LOOKUP_RESULTS=true
DEBUG_LOG_API_CALLS=false
DEBUG_LOG_DIAGRAM_GENERATION=true

# Mock Data (for testing without API calls)
MOCK_LOOKUP_DATA=false
MOCK_DIAGRAM_DATA=false
MOCK_AI_RESPONSES=false

# =============================================================================
# PRODUCTION SETTINGS (uncomment for production)
# =============================================================================

# NODE_ENV=production
# DEBUG_MODE=false
# DEBUG_LOG_LOOKUP_RESULTS=false
# DEBUG_LOG_API_CALLS=false
# DEBUG_LOG_DIAGRAM_GENERATION=false
# MOCK_LOOKUP_DATA=false
# MOCK_DIAGRAM_DATA=false
# MOCK_AI_RESPONSES=false

# =============================================================================
# OPTIONAL: EXTERNAL SERVICES
# =============================================================================

# Dictionary API (optional - for enhanced lookup features)
# DICTIONARY_API_URL=https://api.dictionaryapi.dev/api/v2/entries/en
# DICTIONARY_API_TIMEOUT=5000

# Wikipedia API (optional - for enhanced lookup features)
# WIKIPEDIA_API_URL=https://en.wikipedia.org/api/rest_v1/page/summary
# WIKIPEDIA_API_TIMEOUT=5000

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# CORS Configuration
CORS_ORIGIN=*
CORS_METHODS=GET,POST,OPTIONS
CORS_HEADERS=Content-Type,Authorization

# Rate Limiting (requests per minute)
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_LOOKUP_REQUESTS_PER_MINUTE=30
RATE_LIMIT_DIAGRAM_REQUESTS_PER_MINUTE=20

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================

# Analytics (optional)
# ANALYTICS_ENABLED=false
# ANALYTICS_TRACK_LOOKUP_USAGE=true
# ANALYTICS_TRACK_DIAGRAM_USAGE=true
# ANALYTICS_TRACK_CHAT_USAGE=true

# Error Reporting (optional)
# ERROR_REPORTING_ENABLED=false
# ERROR_REPORTING_SERVICE_URL=
# ERROR_REPORTING_API_KEY=
